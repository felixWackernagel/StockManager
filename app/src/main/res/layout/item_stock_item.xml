<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                   xmlns:app="http://schemas.android.com/apk/res-auto"
                   xmlns:tools="http://schemas.android.com/tools"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:foreground="?attr/selectableItemBackground">

    <de.wackernagel.android.sidekick.widgets.TypefaceTextView
        android:id="@+id/stock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:maxLines="1"
        android:gravity="center"
        android:background="@drawable/ic_stock_item"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sidekick_keyline1"
        android:layout_marginStart="@dimen/sidekick_keyline1"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:typeface="roboto_bold"
        tools:text="12"/>

    <de.wackernagel.android.sidekick.widgets.TypefaceTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/sidekick_keyline2"
        android:paddingRight="@dimen/sidekick_keyline3"
        android:textColor="@color/sidekick_text_primary"
        android:textSize="16sp"
        app:typeface="roboto_regular"
        tools:text="Single line list row"/>

    <ImageButton
        android:contentDescription="@null"
        android:padding="8dp"
        android:layout_gravity="center_vertical|end"
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_vert_black_24dp"/>

</FrameLayout>